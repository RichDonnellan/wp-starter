{
    "name": "aac/alcohol-org",
    "type": "project",
    "description":
        "Custom theme for Alcohol.org",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.0",
        "composer/installers": "^1.4",
        "wpackagist-plugin/wordpress-seo":"6.3.1",
        "wpackagist-plugin/wordfence":"7.0.5"
    },
    "extra": {
        "installer-paths": {
            "../../mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "../../plugins/{$name}/": ["type:wordpress-plugin"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"shell_exec('rm -rf vendor');\""
        ],
        "post-update-cmd": [
            "php -r \"shell_exec('rm -rf vendor');\""
        ]
    }
}